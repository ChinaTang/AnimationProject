<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popup_window_style">
        <item name="android:windowEnterAnimation">@anim/scal_popup_open</item>
        <item name="android:windowExitAnimation">@anim/scal_popup_close</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">bottom|right</item>
    </style>
    <style name="item_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">bottom|right</item>
    </style>

</resources>
